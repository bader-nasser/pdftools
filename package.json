{
	"name": "@bader-nasser/pdftools",
	"description": "PDF tools to extract and process PDF files",
	"version": "0.12.2",
	"type": "module",
	"license": "MIT",
	"author": "Bader Nasser",
	"bin": {
		"pdftools": "bin/run.js",
		"pdf-tools": "bin/run.js"
	},
	"homepage": "https://github.com/bader-nasser/pdftools",
	"bugs": "https://github.com/bader-nasser/pdftools/issues",
	"repository": "bader-nasser/pdftools",
	"scripts": {
		"prepare": "husky install",
		"clean": "shx rm -rf dist test/pdfz test/docs/aaa test/pdfs/output*.pdf *.tgz",
		"generate-schema": "node generate-schema.mjs",
		"generate-schema:watch": "ts-node generate-schema.mjs --watch",
		"app-dev": "./bin/dev.js",
		"app-prod": "./bin/run.js",
		"dev": "run-s generate-schema \"app-dev {@}\" --",
		"cli": "run-s build \"app-prod {@}\" --",
		"build-js": "tsc -b",
		"build": "run-s clean build-js generate-schema",
		"build-prod": "pnpm test && pnpm pack",
		"lint:types": "tsc --noEmit",
		"lint:scripts": "xo",
		"lint:prettier": "prettier . --check",
		"lint": "run-s lint:*",
		"fmt:scripts": "xo --fix",
		"fmt:prettier": "prettier . --write",
		"fmt-readme": "prettier README.md --write",
		"fmt": "run-s fmt:*",
		"prepack": "run-s build oclif-manifest oclif-readme fmt-readme",
		"postpack": "shx rm -f oclif.manifest.json",
		"test-mocha": "mocha --forbid-only \"test/**/*.test.ts\"",
		"test": "run-s test-mocha lint",
		"test-pack": "pnpm test && pnpm pack",
		"oclif-manifest": "oclif manifest",
		"oclif-readme": "oclif readme",
		"amend": "git commit --amend --no-edit --date=\"$(date)\"",
		"amend-q": "git commit --amend --no-edit --date=\"$(date)\" -n",
		"amend-all": "git commit --amend --no-edit --date=\"$(date)\" --all",
		"amend-all-q": "git commit --amend --no-edit --date=\"$(date)\" --all -n",
		"push-f": "git push -f"
	},
	"types": "dist/index.d.ts",
	"exports": "./lib/index.js",
	"dependencies": {
		"@ltd/j-toml": "^1.38.0",
		"@oclif/core": "^2.14.0",
		"@oclif/plugin-autocomplete": "^2.3.6",
		"@oclif/plugin-help": "^5.2.18",
		"@oclif/plugin-plugins": "^3.3.2",
		"execa": "^8.0.1",
		"fs-extra": "^11.1.1",
		"json5": "^2.2.3",
		"yaml": "^2.3.2"
	},
	"devDependencies": {
		"@oclif/test": "^2.5.1",
		"@types/chai": "^4.3.5",
		"@types/fs-extra": "^11.0.1",
		"@types/mocha": "^10.0.1",
		"@types/node": "^20.5.7",
		"chai": "^4.3.8",
		"eslint-config-prettier": "^9.0.0",
		"husky": "^8.0.3",
		"mocha": "^10.2.0",
		"npm-run-all": "^4.1.5",
		"oclif": "^3.14.0",
		"prettier": "^3.0.3",
		"shx": "^0.3.4",
		"ts-json-schema-generator": "^1.3.0",
		"ts-node": "^10.9.1",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"xo": "^0.56.0"
	},
	"engines": {
		"node": ">=18.11.0"
	},
	"files": [
		"/bin",
		"/dist",
		"/npm-shrinkwrap.json",
		"/oclif.manifest.json",
		"/data.schema.json"
	],
	"keywords": [
		"oclif",
		"pdf",
		"pdftk",
		"extract pages",
		"merge pdfs"
	],
	"oclif": {
		"bin": "pdftools",
		"binAliases": [
			"pdftools",
			"pdf-tools"
		],
		"scope": "bader-nasser",
		"dirname": "pdftools",
		"commands": "./dist/commands",
		"additionalHelpFlags": [
			"-h"
		],
		"additionalVersionFlags": [
			"-v"
		],
		"plugins": [
			"@oclif/plugin-help",
			"@oclif/plugin-plugins",
			"@oclif/plugin-autocomplete"
		],
		"topicSeparator": " "
	},
	"xo": {
		"prettier": true,
		"envs": [
			"es2024",
			"node",
			"mocha"
		],
		"extends": [
			"prettier"
		],
		"rules": {
			"capitalized-comments": "off",
			"no-await-in-loop": "warn"
		},
		"overrides": [
			{
				"files": "bin/*.js",
				"rules": {
					"unicorn/prefer-top-level-await": "warn"
				}
			}
		]
	}
}
