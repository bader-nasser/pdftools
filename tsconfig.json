{
	"compilerOptions": {
		"declaration": true,
		"importHelpers": true,
		"module": "Node16",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"target": "ES2019",
		"moduleResolution": "Node16",
		"lib": ["ES2022"],
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*"],
	"ts-node": {
		"esm": true
	}
}
