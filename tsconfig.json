{
	"compilerOptions": {
		"declaration": true,
		"importHelpers": true,
		"strict": true,
		"rootDir": "src",
		"outDir": "dist",
		"lib": ["ES2022"],
		"target": "ES2022",
		"module": "Node16",
		"moduleResolution": "Node16",
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"composite": false
	},
	"include": ["src/**/*", "src/*"],
	"ts-node": {
		"esm": true
	}
}
